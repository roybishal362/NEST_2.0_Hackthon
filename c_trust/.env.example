# C-TRUST Environment Configuration
# Copy this file to .env and fill in your values

# ========================================
# APPLICATION SETTINGS
# ========================================
APP_NAME=C-TRUST
APP_VERSION=1.0.0
ENVIRONMENT=MVP
DEBUG=false
LOG_LEVEL=INFO

# ========================================
# API CONFIGURATION
# ========================================
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1
CORS_ORIGINS=http://localhost:3000,http://localhost:5173


# ========================================
# REDIS CONFIGURATION (Caching & Real-time)
# ========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ========================================
# AI/ML CONFIGURATION
# ========================================
# Groq API Configuration
GROQ_API_KEY= your_groq_api_key_here

# Model Selection (choose one):
# - llama-3.3-70b-versatile (recommended - best balance of speed and quality)
# - llama-3.1-8b-instant (fastest - good for development)
# - mixtral-8x7b-32768 (fallback - large context window)
GROQ_MODEL=llama-3.3-70b-versatile

GROQ_TEMPERATURE=0.1
GROQ_MAX_TOKENS=2048

# LangChain Configuration
LANGCHAIN_TRACING=Trues
LANGCHAIN_API_KEY= your_langchain_api_key_here

# ========================================
# DATA SOURCE CONFIGURATION
# ========================================
# Path to NEST 2.0 dataset
DATA_ROOT_PATH=.../Data for problem Statement 1/NEST 2.0 Data files_Anonymized/QC Anonymized Study Files

# Data processing settings
BATCH_SIZE=10
MAX_WORKERS=4
SNAPSHOT_RETENTION_DAYS=90

# ========================================
# SECURITY SETTINGS
# ========================================
SECRET_KEY=your-secret-key-change-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# ========================================
# DQI ENGINE CONFIGURATION
# ========================================
# Dimension weights (must sum to 100)
DQI_SAFETY_WEIGHT=35
DQI_COMPLIANCE_WEIGHT=25
DQI_COMPLETENESS_WEIGHT=25
DQI_OPERATIONS_WEIGHT=15

# Threshold settings
DQI_CRITICAL_THRESHOLD=50
DQI_HIGH_THRESHOLD=70
DQI_MEDIUM_THRESHOLD=85

# ========================================
# AGENT CONFIGURATION
# ========================================
# Agent consensus voting weights
AGENT_SAFETY_WEIGHT=30
AGENT_COMPLETENESS_WEIGHT=20
AGENT_COMPLIANCE_WEIGHT=20
AGENT_OPERATIONS_WEIGHT=15
AGENT_CODING_WEIGHT=10
AGENT_TIMELINE_WEIGHT=5

# Agent abstention settings
AGENT_MIN_CONFIDENCE=0.6
AGENT_ABSTENTION_THRESHOLD=0.5

# ========================================
# GUARDIAN ENGINE SETTINGS
# ========================================
GUARDIAN_ENABLED=true
GUARDIAN_CHECK_INTERVAL_HOURS=6
GUARDIAN_DRIFT_THRESHOLD=0.15

# ========================================
# NOTIFICATION SETTINGS
# ========================================
EMAIL_ENABLED=false
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_FROM=noreply@ctrust.novartis.com

SLACK_ENABLED=false
SLACK_WEBHOOK_URL=

# ========================================
# MONITORING & OBSERVABILITY
# ========================================
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

SENTRY_ENABLED=false
SENTRY_DSN=

# ========================================
# FILE STORAGE
# ========================================
UPLOAD_MAX_SIZE_MB=100
TEMP_DIR=./temp
ARCHIVE_DIR=./archive

# ========================================
# FEATURE FLAGS
# ========================================
FEATURE_REALTIME_UPDATES=true
FEATURE_COLLABORATION=true
FEATURE_GUARDIAN=true
FEATURE_GENAI_EXPLANATIONS=true
