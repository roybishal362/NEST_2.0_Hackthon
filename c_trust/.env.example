# C-TRUST Environment Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# Groq API Configuration (Primary LLM Provider)
# ============================================================================
# Get your free API key at: https://console.groq.com/keys
# Groq provides ultra-fast inference with Llama models
GROQ_API_KEY=your_groq_api_key_here

# Model Selection (choose one):
# - llama-3.3-70b-versatile (recommended - best balance of speed and quality)
# - llama-3.1-8b-instant (fastest - good for development)
# - mixtral-8x7b-32768 (fallback - large context window)
GROQ_MODEL=llama-3.3-70b-versatile

# LLM Configuration
GROQ_MAX_TOKENS=1000
GROQ_TEMPERATURE=0.3

# ============================================================================
# API Server Configuration
# ============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ============================================================================
# Data Configuration
# ============================================================================
# Path to NEST 2.0 dataset (relative to c_trust directory)
DATA_PATH=../norvatas/Data for problem Statement 1

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=3600

# ============================================================================
# Agent Configuration
# ============================================================================
# Number of agents to run in parallel
AGENT_PARALLEL_WORKERS=4

# Agent timeout (seconds)
AGENT_TIMEOUT=30

# Minimum confidence threshold for agent signals
AGENT_MIN_CONFIDENCE=0.5

# ============================================================================
# DQI Engine Configuration
# ============================================================================
# DQI calculation method: weighted, simple, adaptive
DQI_METHOD=weighted

# DQI dimension weights (must sum to 1.0)
DQI_WEIGHT_COMPLETENESS=0.25
DQI_WEIGHT_ACCURACY=0.25
DQI_WEIGHT_CONSISTENCY=0.20
DQI_WEIGHT_TIMELINESS=0.15
DQI_WEIGHT_VALIDITY=0.15

# ============================================================================
# Guardian Agent Configuration
# ============================================================================
# Guardian staleness threshold (hours)
GUARDIAN_STALENESS_THRESHOLD=24

# Guardian consensus threshold (0.0-1.0)
GUARDIAN_CONSENSUS_THRESHOLD=0.6

# ============================================================================
# Database Configuration (Optional)
# ============================================================================
# DATABASE_URL=sqlite:///./c_trust.db
# DATABASE_ECHO=false

# ============================================================================
# Logging Configuration
# ============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/c_trust.log

# ============================================================================
# Feature Flags
# ============================================================================
ENABLE_REAL_TIME_UPDATES=true
ENABLE_EXPORT=true
ENABLE_NOTIFICATIONS=true
ENABLE_AUDIT_TRAIL=true

# ============================================================================
# Performance Configuration
# ============================================================================
# Maximum concurrent requests
MAX_CONCURRENT_REQUESTS=10

# Request timeout (seconds)
REQUEST_TIMEOUT=60

# ============================================================================
# Development Configuration
# ============================================================================
# Set to true for development mode
DEBUG=false

# Mock mode (bypass Groq API for testing)
MOCK_MODE=false

# ============================================================================
# Security Configuration
# ============================================================================
# Secret key for session management (generate with: openssl rand -hex 32)
SECRET_KEY=your_secret_key_here

# API key for external integrations (optional)
# API_KEY=your_api_key_here
